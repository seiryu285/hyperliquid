{
    "environment": {
        "mode": "testnet",  
        "api": {
            "production": {
                "endpoint": "https://api.hyperliquid.xyz",
                "ws_endpoint": "wss://api.hyperliquid.xyz/ws"
            },
            "testnet": {
                "endpoint": "https://api.hyperliquid-testnet.xyz",
                "ws_endpoint": "wss://api.hyperliquid-testnet.xyz/ws"
            }
        },
        "dry_run": false  
    },
    "symbols": [
        {
            "symbol": "ETH-PERP",
            "timeframes": ["5m", "15m", "1h", "4h"],
            "is_primary": true
        }
    ],
    "strategies": [
        {
            "id": "lstm_eth_1h",
            "type": "lstm",
            "symbols": ["ETH-PERP"],
            "timeframes": ["1h"],
            "parameters": {
                "model_id": "lstm_eth_1h",
                "lookback": 20,
                "features": ["close", "volume", "rsi_14", "macd", "macd_signal", "bb_upper", "bb_lower"],
                "target": "return_1d",
                "threshold": 0.01,
                "position_size": 0.1,
                "input_shape": [20, 7],
                "units": 64,
                "dropout": 0.2,
                "weights_path": "models/weights/lstm_eth_1h.h5"
            }
        },
        {
            "id": "trend_following_eth_4h",
            "type": "trend_following",
            "symbols": ["ETH-PERP"],
            "timeframes": ["4h"],
            "parameters": {
                "fast_ma": 10,
                "slow_ma": 50,
                "position_size": 0.1
            }
        }
    ],
    "risk_management": {
        "max_drawdown": 0.1,
        "max_position_size": 0.2,
        "max_leverage": 3.0,
        "max_open_positions": 1,
        "stop_loss_pct": 0.05,
        "take_profit_pct": 0.1,
        "emergency_stop": {
            "consecutive_losses": 5,
            "drawdown_threshold": 0.15,
            "api_errors_threshold": 3
        }
    },
    "monitoring": {
        "prometheus": {
            "enabled": true,
            "port": 9090
        },
        "grafana": {
            "enabled": true,
            "port": 3000
        },
        "metrics": {
            "order_latency": true,
            "api_errors": true,
            "pnl": true,
            "drawdown": true,
            "position_size": true,
            "margin_level": true
        }
    },
    "alerts": {
        "email": {
            "enabled": false,
            "recipients": ["your-email@example.com"]
        },
        "slack": {
            "enabled": true,
            "channel": "#trading-alerts"
        },
        "telegram": {
            "enabled": false,
            "chat_id": "your-chat-id"
        }
    },
    "database": {
        "mongodb": {
            "enabled": true,
            "uri": "mongodb://localhost:27017",
            "database": "hyperliquid_trading",
            "collections": {
                "orders": "orders",
                "trades": "trades",
                "positions": "positions",
                "market_data": "market_data",
                "performance": "performance"
            }
        }
    },
    "logging": {
        "level": "INFO",
        "file": "logs/trading.log",
        "max_size": 10485760,  
        "backup_count": 5
    }
}
